<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
  xmlns:android="http://schemas.android.com/apk/res/android"
  id="io-supportkit-sktcordovaplugin" version="1.1.3">

  <name>SupportKit</name>
  <description>SupportKit Cordova Plugin for iOS and Android</description>
  <keywords>SupportKit,messaging,chat,in-app,support,help</keywords>

  <!-- <asset src="www/js/supportkit-cordova.js" target="js/supportkit-cordova.js" /> -->

  <js-module name="SupportKit" src="www/js/supportkit-cordova.js">
        <clobbers target="SupportKit" />
  </js-module>

  <!-- ios -->
  <platform name="ios">

    <header-file src="src/ios/SupportKitCordova.h" />
    <source-file src="src/ios/SupportKitCordova.m" />


    <config-file target="config.xml" parent="/*">
      <feature name="SupportKitCordova">
        <param name="ios-package" value="SupportKitCordova"/>
      </feature>
    </config-file>



    <!-- <header-file src="src/ios/SupportKit.framework/Versions/A/Headers/SupportKit.h" />
    <source-file src="src/ios/SupportKit.framework/Versions/A/SupportKit" framework="true" /> -->
    <framework src="src/ios/SupportKit.framework" custom="true" />
    <framework src="src/ios/SupportKit.bundle" custom="true" />

    <framework src="CoreGraphics.framework" />
    <framework src="CoreTelephony.framework" />
    <framework src="CoreText.framework" />
    <framework src="Foundation.framework" />
    <framework src="libxml2.dylib" />
    <framework src="OpenGLES.framework" />
    <framework src="QuartzCore.framework" />
    <framework src="SystemConfiguration.framework" />
    <framework src="UIKit.framework" />
    <framework src="AssetsLibrary.framework" />
    <framework src="Photos.framework" />
    <framework src="AVFoundation.framework" />

  </platform>

  <!-- android -->
  <platform name="android">
    <config-file target="config.xml" parent="/*">
      <feature name="SupportKitCordova">
        <param name="android-package" value="io.supportkit.cordova.SupportKitCordova"/>
      </feature>
    </config-file>
    <source-file src="src/android/SupportKitCordova.java" target-dir="src/io/supportkit/cordova" />
  </platform>

</plugin>
